rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /articles/{articleId} {
      // Allow reads and writes for authenticated users
      allow read, write: if request.auth != null && 
        'title' in request.resource.data && request.resource.data.title is string &&
        'url' in request.resource.data && request.resource.data.url is string &&
        'content' in request.resource.data && request.resource.data.content is string;
    }
  }
}
